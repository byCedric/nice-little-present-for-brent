{ 
  "private": true,
  "name": "@acme/ui",
  "version": "1.0.0",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "tsup ./src --watch",
    "build": "tsup ./src",
    "clean": "git clean ./build -xdf"
  },
  "devDependencies": {
    "@types/react": "~17.0.0",
    "@types/react-native": "~0.64.26",
    "react": "18.0.0",
    "react-native": "0.64.3",
    "tsup": "^6.2.2"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "entry": ["src/index.ts"],
    "external": ["react", "react-native"],
    "outDir": "build",
    "sourcemap": true,
    "splitting": false
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
